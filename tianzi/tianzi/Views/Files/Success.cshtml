@{
    ViewData["Title"] = "Uploaded";
    var code = TempData["Code"] as string;
    var token = TempData["DeleteToken"] as string;
}

<h2>Uploaded!</h2>

<p><b>Share code:</b> <code>@code</code></p>

<p>
    <b>Download link:</b>
    <a href="/f/@code">/f/@code</a>
</p>

<p>
    <b>Details link:</b>
    <a href="/d/@code">/d/@code</a>
</p>

<p style="margin-top:18px;">
    <b>Delete (keep private):</b><br />

    <form asp-action="Delete" method="post" style="display:inline;">
        <input type="hidden" name="code" value="@code" />
        <input type="hidden" name="delcode" value="@token" />
        <button type="submit" onclick="return confirm('Delete this uploaded file?');">
            Delete now
        </button>
    </form>

    <div style="margin-top:10px;">
        <small>Tip: Save your delete token somewhere safe. It won’t be shown again after you leave this page.</small>
        <br />
        <small><b>Delete token:</b> <code>@token</code></small>
    </div>
</p>

<p style="margin-top:18px;">
    <a asp-action="Index">Upload another</a>
</p>
